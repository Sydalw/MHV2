---
interface Props {
    className: string;
    name: string;
	date: string;
    rating: string;
    comment: string;
}

const { className, name, date, rating, comment } = Astro.props;

const etoilePleine = '<i class="fas fa-star"></i>'
//const etoileVide = '<i class="far fa-star"></i>'
let getStarCount = etoilePleine.repeat(Number(rating));
//getStarCount=etoileVide.repeat(5-rating);

---

<div class="slide">
    <div class:list={["content", className]}>
        <div class="box-top">
            <div class="profile">
                <div class="name-user">
                    <strong>{name}</strong>
                    <span>{date}</span>
                </div>
            </div>
            <div class="reviews">
                <Fragment set:html={getStarCount}/>
            </div>
        </div>
        <div class="client-comment">
            <p>{comment}</p>
        </div>
    </div>   
</div>

<style lang="scss">
    .slide {
        width: 90%;
        display: flex;
        justify-content: center;
        height:auto;

        .content {
            width: 90%;
            overflow-y: auto;

            .box-top{
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 2rem;
                
                .profile{
                    display: flex;
                    align-items: center;
            
                    .name-user{
                        display: flex;
                        flex-direction: column;
                        text-align: left;
            
                        strong{
                            color: #3d3d3d;
                            font-size: 1.6rem;
                            letter-spacing: 0.5px;
                        }
                        span {
                            color: #979797;
                            font-size: 1.2rem;
                            text-align: left;
                        }
                    }
                }
                .reviews{
                    color: #f9d71c;
                }
            }
            .client-comment {
                p{
                    font-size: 1.6rem;
                    color: #4b4b4b;
                    text-align: justify;
                    height:100%;
                }
            }
        }
    }
</style>