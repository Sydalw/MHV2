---
interface Props {
	insta: string;
	facebook: string;
	mail: string;
    phone: string;
}

const { insta, facebook, mail, phone } = Astro.props;

const mailto = "mailto:" + mail;
const tel = "tel:" + phone
---

<div class="top-bar">
    <div class="box-sizer">
        <div>
            <a href={insta}><i class="fa-brands fa-instagram"></i></a>
            <a href={facebook}><i class="fa-brands fa-facebook-f"></i></a>
        </div>
        <div>
            <a href={mailto}><i class="fa-sharp fa-solid fa-envelope"></i> {mail}</a>
            <a href={tel}><i class="fa-solid fa-phone"></i> {phone}</a>
        </div>
    </div>
</div>

<style lang="scss">
    .top-bar {
        height: 3rem;
        margin: 0 auto;
        line-height: 3rem;
        color: var(--p-color);
        //background-color: var(--border-color);
        background-color: var(--indian-red);
        font-size: 1.6rem;
        display: flex;
        justify-content: center;
        z-index: 200;
        border-bottom: 1px solid var(--border-color);
        color:#fff;
        @media screen and (max-width: 45rem){
            font-size: 1.2rem;
        }
        a {
            margin: 0 1rem;
            
            &:hover {
                color: var(--p-spanned-color);
            }
        }
    }
    
</style>