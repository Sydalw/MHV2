---
const API_KEY = import.meta.env.MAP_API_KEY;
---

<footer>
    <iframe
    referrerpolicy="no-referrer-when-downgrade"
    src=`https://www.google.com/maps/embed/v1/place?key=${API_KEY}&q=1486+Houga+Mont+de+Marsan`
    allowfullscreen>
    </iframe>
    <div class="bottom-bar">
        <div class="box-sizer">
            <div>
                <span>Site web réalisé par : </span>
            </div>
            <div>
                <a href="mailto:wladys.lelong@devlopetvous.fr"><i class="fa-sharp fa-solid fa-envelope"></i> wladys.lelong@devlopetvous.fr</a>
                <a href="https://devlopetvous.fr"><i class="fa-solid fa-globe"></i> devlopetvous.fr</a>
            </div>
        </div>
    </div>
</footer>

<style lang="scss">
    footer {
        background-color: var(--nav-bg);
    }

    iframe {
        width: 100%;
        height: 300px;
        border:0;
    }

    .bottom-bar {
        height: 5rem;
        width: 100%;
        margin: 0 auto;
        line-height: 5rem;
        color: var(--nav-font-color);
        background-color: var(--indian-red);
        font-size: 1.2rem;
        display: flex;
        z-index: 200;
        justify-content: center;
        border-top: 1px solid var(--border-color);

        a {
            margin: 0 1rem;

            &:hover {
                color: var(--p-spanned-color);
            }
        }
    }
    
</style>